<%- include('../layout') %>
<h1 class="text-2xl font-bold">Register</h1>
<form action="/register" method="POST" class="mt-4">
    <div class="mb-4">
        <input type="text" name="username" placeholder="Username" required class="border p-2 w-full">
    </div>
    <div class="mb-4">
        <input type="password" name="password" placeholder="Password" required class="border p-2 w-full">
    </div>
    <button type="submit" class="bg-blue-500 text-white p-2">Register</button>
</form>
<p class="mt-4">Already have an account? <a href="/login" class="text-blue-500">Login here</a></p>